<!DOCTYPE html>
<html>

<head>
	<link rel='icon' href='/img/favicon.ico' type='image/x-icon'>
	<title id="charity_title"></title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	<script src="/scripts/charityDetails.js"></script>
	<!--
	<link rel="stylesheet" href="./styles/styles.css">
	-->
	 <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Ensures optimal rendering on mobile devices. -->
  	 <meta http-equiv="X-UA-Compatible" content="IE=edge" /> <!-- Optimal Internet Explorer compatibility -->

</head>

<body onload="viewCharity(new URLSearchParams(window.location.search).get('id'),'<%= JSON.stringify(charities) %>','<%= JSON.stringify(events) %>','<%= JSON.stringify(addresses) %>')">

    <!-- navigation bar -->
	<%- include('../partials/nav.ejs', {bg: 1}) %>

    <!-- charity profile details -->
	<div class="container">
		<div class="row">
			<div class="col">
			</div>
			<div class="col-8">
				<p style="text-align:center;">
					<br><img id="charity_logo" src="data:," alt="" width="400">
					<br><p class="font-weight-bold text-center" id="charity_tag"></p>
				</p>
			</div>
			<div class="col">
			</div>
		</div>

		<div class="row">
			<div class="col">
				<h3>Charity Type</h3>
				<div id="types">
				</div>
				<h3>Contact</h3>
				<p id="charity_contact"></p>
				<div id = "links">
				</div>
			</div>

			<div class="col-6">
				<h3>Mission</h3>
				<p id="charity_desc"></p>

				<!-- donation buttons -->
				<div class="row"><div class="col"></div><div class="col-5">
					<form action="https://www.paypal.com/donate" method="post" target="_top">
						<input type="hidden" name="hosted_button_id" value="J2CJ5RJ2FG3U8" />
						<input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
						<img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1" />
					</form>
				</div><div class="col"></div></div>

			</div>

			<div class="col">
				<h3 class="text-center">Upcoming Events</h3>
				<div class="container text-center" id="events">
				</div>
				<div class="container text-center">
					<a type="button" id="add_event" class="btn btn-dark btn-sm">Add an Event</a>
				</div>
			</div>

		</div>
	</div>

	<!-- photo gallery -->
	<div class="container text-center">
		<img class="w-75 rounded" src="" id="photo">
	</div>
	<br>

	<!-- recommendation cards -->
	<div class="container">
		<h3>Similar Charities</h3>
		<div class='card-deck text-center' id="similar"></div>
	</div>
    
    <!-- footer -->
    <%- include('../partials/footer.ejs') %>

</body>

</html>
